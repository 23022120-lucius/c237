<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Apple Store</title>
  <style>
    .card-img-top {
      height: 200px;
      object-fit: cover;
    }
  </style>
</head>
<body>
  <%- include ('partials/navbar.ejs') %>
  <div class="banner">
    <a href="/discount">
        <img src="/images/Screenshot.png" alt="Click for Discount" class="banner-image" height="100"width="300">
    </a>
</div>
  <div class="container">
    <br>
    <div class="text-center"><h2>Products from Apple Store Database</h2></div>
    <br>
    
    <form action="/search" method="GET" class="d-flex mb-3">
      <input class="form-control me-2" type="search" name="query" placeholder="Search by product name" aria-label="Search" required>
      <button class="btn btn-outline-success" type="submit">Search</button> 
    </form>
    

    <div class="row">
      <% for (let i = 0; i < products.length; i++) { %>
        <div class="col-md-4 mb-4">
          <div class="card">
            <img src="/images/<%= products[i].image %>" class="card-img-top" alt="<%= products[i].productName %>">
            <div class="card-body">
              <h5 class="card-title"><%= products[i].productName %></h5>
              <p class="card-text">Quantity: <%= products[i].quantity %></p>
              <p class="card-text">Price: $<%= products[i].price.toFixed(2) %></p>
              <a href="/product/<%= products[i].productId %>" class="btn btn-primary mb-2">View Details</a>
              <div class="d-grid gap-2">
                <a href="/editProduct/<%= products[i].productId %>" class="btn btn-warning">Edit</a>
                <a href="/deleteProduct/<%= products[i].productId %>" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this product?')">Delete</a>
              </div>
            </div>
          </div>
        </div>
      <% } %>
      
    </div>
  </div>
  
</body>
</html>
